@model Organi.Domain.Entity.Contact

@{
    ViewData["Title"] = "Details";
}

<div class="row">
    <form class="col-12" method="post">
        <div class="form-group row">
            <label asp-for="Name" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Name" disabled class="form-control">
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Email" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Email" disabled class="form-control">
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Message" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Message" disabled class="form-control">
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Answer" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <textarea asp-for="Answer" class="form-control"></textarea> 
            </div>
        </div>
        <div class="form-group row">
            <div class="col-12">
                <button type="submit" class="btn btn-success">Submit</button>
            </div>
        </div>
    </form>
</div>
@section Scripts{
    <script src="~/lib/ckeditor5/ckeditor.js"></script>
    <script>
        ClassicEditor
            .create(document.querySelector('#Answer'))//idye gore secir teqdim edir
            .catch(error => {
                console.error(error);
            });
    </script>
}